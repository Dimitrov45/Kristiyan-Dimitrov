public class Main {
    public static void main(String[] args) {
        int[][] matrix = {
            {1, 2},
            {3, 4}
        }; 

        int sumSecondRow = sumRow(matrix, 1); 

        System.out.println("Сумата на елементите на втория ред е: " + sumSecondRow);
    }

    public static int sumRow(int[][] matrix, int row) {
        int sum = 0;
        for (int i = 0; i < matrix[row].length; i++) {
            sum += matrix[row][i];
        }
        return sum;
    }
}
