public class Main {
    public static void main(String[] args) {
        int[] arr = {1, 2, 3}; 

        int sumEven = 0; 

        for (int num : arr) { 
            if (num % 2 == 0) { 
                sumEven += num; 
            }
        }

        System.out.println("Сумата на четните числа в масива е: " + sumEven);
    }
}
