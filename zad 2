public class Main {
    public static void main(String[] args) {
        int[] array = {1, 2, 3};
        int sumOfEvens = 0;

        for (int i = 0; i < array.length; i++) {
            if (array[i] % 2 == 0) {
                sumOfEvens += array[i];
            }
        }

        System.out.println("Сумата на четните числа е: " + sumOfEvens);
    }
}
