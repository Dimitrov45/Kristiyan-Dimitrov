public class Main {
    public static void main(String[] args) {
        int n = 3; 

        printTriangle(n);
    }

    public static void printTriangle(int n) {
        for (int i = 1; i <= n; i++) { 
            for (int j = 1; j <= i; j++) { 
                System.out.print("* "); 
            }
            System.out.println();
        }
    }
}
